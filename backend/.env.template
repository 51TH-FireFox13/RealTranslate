# Configuration RealTranslate - Production VPS inovaperf
PORT=3000
NODE_ENV=production

# JWT Secrets (IMPORTANT: Changez ces valeurs!)
JWT_SECRET=CHANGEZ_CETTE_CLE_SECRETE_SUPER_LONGUE_ET_ALEATOIRE
JWT_REFRESH_SECRET=CHANGEZ_CETTE_CLE_REFRESH_AUSSI_SUPER_LONGUE

# OpenAI API (obligatoire pour Whisper, GPT, TTS)
